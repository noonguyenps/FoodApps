<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:background="@drawable/cat_background1">

    <ImageView
        android:id="@+id/foodPic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/cat_1" />

    <LinearLayout
        android:layout_width="430dp"
        android:layout_height="160dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rowFoodName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="1dp"
            android:text="Food Name"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/rowStore"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="1dp"
            android:text="Store Name"
            android:textSize="19sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/rowPrice"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="1dp"
            android:text="0.0"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/rowFoodDescription"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="1dp"
            android:text="b"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="40dp"
        android:layout_height="160dp"
        android:background="@drawable/cricle_button_orangr"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>